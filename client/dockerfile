FROM node:20-alpine

WORKDIR /app

# Copy package files first (better caching)
COPY package*.json ./
RUN npm ci

# Install serve globally
RUN npm install -g serve

# Copy source code
COPY . .

ARG VITE_SERVER_API
ENV VITE_SERVER_API=$VITE_SERVER_API

# Build the app
RUN npm run build

# Change to port 80 to match docker-compose mapping
EXPOSE 80

# Start the app on port 80
CMD ["serve", "-s", "dist", "-l", "80"]